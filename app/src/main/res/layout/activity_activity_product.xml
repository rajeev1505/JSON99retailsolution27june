<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100.0"
    android:background="#ff9033"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="100.0"
        android:layout_below="@+id/layer1"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="Search"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView1"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <com.mycompany.apps.CustomAuto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:singleLine="true"
                    android:hint="ENTER PRODUCT NAME"
                    android:textColor="#000000"
                    android:textSize="14px"
                    android:id="@+id/myautocomplete"
                    android:background="@drawable/border_style">
                </com.mycompany.apps.CustomAuto>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Product Id"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView0"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_Prodid"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Barcode"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView2"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_Barcode"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Product Name"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView3"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_Desc"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="MRP"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_MRP"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Manufacturer"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView19"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"

                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_manuf"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                   />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Measure Unit"
                    android:textColor="#000000"
                    android:id="@+id/textView23"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_MeasureUnit"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:visibility="invisible"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Tax"
                    android:textColor="#000000"
                    android:id="@+id/textView7"
                    android:fontFamily="sens-serif"
                    android:textSize="20px"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_Tax"
                    android:textSize="20sp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:visibility="invisible"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Active"
                    android:textColor="#000000"
                    android:id="@+id/textViewab"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:id="@+id/product_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:singleLine="true"
                    android:background="@drawable/border_style"
                    android:textSize="20px"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="Selling Price *"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView5"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:focusable="true"
                    android:textColor="#000000"
                    android:id="@+id/product_Selling"
                    android:textSize="18px"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="Purchase Price*"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView6"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/product_Purchase"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    android:focusable="true"
                    android:background="@drawable/border_style" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:text="Internet Price "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textViewinternet"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:id="@+id/product_InternetPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:ems="10"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/textViewrelevant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48"
                    android:text="Internet Rel "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:id="@+id/product_internetrelevant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:ems="10"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="Active *"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textViewa"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <Spinner
                    android:id="@+id/product_active"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.55"
                    android:background="@drawable/border_style"
                    android:textSize="18px"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:text="Margin"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/margintext"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:id="@+id/product_margin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_weight="0.55"

                    android:textSize="18px"
                    />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/product_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="UPDATE"
            android:id="@+id/product_update_button"
            android:textColor="#FFFFFF"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:background="@drawable/button_border"
            android:layout_weight="0.3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="CLEAR"
            android:fontFamily="sans-serif"
            android:textSize="20px"
            android:id="@+id/product_clear_button"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_border"
            android:layout_weight="0.3"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#FFFFFF"
            android:textSize="20px"
            android:id="@+id/product_exit_button"
            android:background="@drawable/button_border"
            android:text="EXIT"
            android:layout_weight="0.3"
            />
    </LinearLayout>

</LinearLayout>