<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="#ff9033"
    tools:context=".UserManagementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"

        android:id="@+id/linearLayout2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Store Id"
                android:textColor="#000000"
                android:id="@+id/textViewstoreid"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editstoreid"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"

                android:layout_gravity="center_vertical"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="User Name"
                android:textColor="#000000"
                android:id="@+id/textViewsno"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <Spinner

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.6"
                android:ems="10"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:id="@+id/username">


            </Spinner>

m

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="First Name"
                android:textColor="#000000"
                android:id="@+id/textviewcardtype"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editfirstname"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Last Name"
                android:textColor="#000000"
                android:id="@+id/textview"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editlastname"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Password"
                android:textColor="#000000"
                android:id="@+id/textviewpertonpoint"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editpassword"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Confirm Password"
                android:textColor="#000000"
                android:id="@+id/textviewbasevalue"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editconfrmpassword"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:weightSum="1.0"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Active"
                android:textColor="#000000"
                android:id="@+id/textvieactive"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></FrameLayout>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editactive"
                android:digits="Y,y,N,n"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />

           <!-- <Spinner
                android:id="@+id/Activespin"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:singleLine="true"
                android:layout_weight="0.5"
                android:background="@drawable/border_style"
                android:text="@string/text"
                android:textSize="10sp"
                android:entries="@array/active_array"
                android:prompt="@string/select2"
                />-->



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.0"
        android:layout_alignParentBottom="true"
        >

       <!-- <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Update"
            android:id="@+id/buttoncancel"
            android:textColor="#000000"
            android:layout_weight="2.0"

            />-->
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="UPDATE"
            android:background="#009985"
            android:id="@+id/buttonupdate"
            android:textColor="#000000"
            android:layout_marginEnd="3dp"
            android:layout_weight="2.0"

            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="EXIT"
            android:id="@+id/buttoncancl"
            android:textColor="#000000"
            android:background="#009985"
            android:layout_weight="2.0"

            />

    </LinearLayout>



</RelativeLayout>
