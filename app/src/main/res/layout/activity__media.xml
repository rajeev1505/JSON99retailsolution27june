<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100.0"
    android:background="#ff9033">


    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SUBMIT"
            android:id="@+id/sbtbutton"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:background="@drawable/button_border"
            android:layout_weight="6.6" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CANCEL"
            android:id="@+id/canclbutton"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:onClick="view"
            android:background="@drawable/button_border"
            android:layout_weight="6.6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Ad Text*"
                    android:textColor="#000000"
                    android:id="@+id/adtext"
                    android:textStyle="bold"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="30dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:inputType="textCapWords"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, "
                    android:ems="10"
                    android:id="@+id/adedit"
                    android:textSize="14px"
                    android:focusable="true"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:hint="Enter Ad Text"
                    android:layout_marginEnd="30dp"
                    />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Start Date*"
                    android:textColor="#000000"
                    android:id="@+id/startdate"
                    android:textStyle="bold"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="30dp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtStartDate"
                    android:textSize="14px"
                    android:hint="@string/hint_start"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:drawableRight="@drawable/clander"
                    android:focusable="false"
                    android:layout_marginEnd="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="End Date*"
                    android:textColor="#000000"
                    android:id="@+id/enddate"
                    android:textStyle="bold"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="30dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:inputType="date"
                    android:ems="10"
                    android:id="@+id/txtEndDate"
                    android:textSize="14px"
                    android:textColor="#000000"
                    android:textColorHint="#000000"
                    android:hint="@string/hint_end"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:drawableRight="@drawable/clander"
                    android:focusable="false"
                    android:layout_marginEnd="30dp">

                    <requestFocus />

                </EditText>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>